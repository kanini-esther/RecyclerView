class NameRecyclerViewAdapter(val nameList: list<String>) :

RecyclerView.Adapter<NameRecyclerViewAdapter.NameViewHolder> (){

   override fun onCreateViewAdapter.NameViewHolder(parent: ViewGroup, viewType:
   Int) : NameVierHolder {

      var itemView = LayoutInflater.from(parent.context)
   .inflate(R.layout.row_name_item,parent, false)
         return NameViewHolder(itemView)
   }

    override fun getItemCount() : Int {
    return nameList.size
    }

    override fun onBindViewHolder(holder: NameViewHolder,
  position: Int) {
               holder.rowView.tvName.text = namesList[position]
  }

   class NameViewHolder ( val rowView: View) :
 RecyclerView.ViewHolder(rowView)
}